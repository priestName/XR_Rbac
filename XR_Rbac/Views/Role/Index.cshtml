@model IEnumerable<XR_Rbac.Models.Role>
@{
    ViewBag.Title = "角色管理";
}

<form id="search">
    <input type="text" placeholder="角色名称" name="Name" />
    <input type="button" value="查询" id="set" />
</form><br />
<a href="#" id="create">增加</a>
<table>
    <tr>
        <th>ID</th>
        <th>角色名称</th>
        <th>操作</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td style="width: 100px;">
                <a class="edit" href="@Url.Action("Edit",new { id = item.ID })">编辑</a>
                @Html.ActionLink("删除", "delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>
@section Script
{
    <script>
        $("#create").click(function() {
                layer.open({
                    type: 2,
                    title: '角色管理',
                    shade: false,
                    shadeClose: true,
                    area: ['600px', '330px'],
                    content: '@Url.Action("Create")'
            });
        });

        $(".edit").click(function (event) {
            var $this = $(this);
            layer.open({
                type: 2,
                title: '角色管理',
                shade: false,
                shadeClose: true,
                area: ['600px', '380px'],
                content: $this.attr("href")
            });
            event.preventDefault();
        });
    </script>
}

